{
    "$schema": "vscode://schemas/color-theme",
    "name": "Vivid Simple Dark Modern",
    "colors": {
        "editor.foreground": "#e0e0e0",
        "editor.lineHighlightBackground": "#40404080",
        "activityBar.background": "#151515",
        "activityBar.border": "#ff3030dd",
        "activityBar.activeBackground": "#00000000",
        "activityBar.foreground": "#70e070aa",
        "activityBar.inactiveForeground": "#868686",
        "activityBar.activeBorder": "#0078d4",
        "sideBar.background": "#1c1c1c",
        "sideBar.foreground": "#e0e0e0",
        "sideBar.border": "#6060ffaa",
        "sideBarSectionHeader.foreground": "#cccccc",
        "sideBarSectionHeader.background": "#252525",
        "sideBarSectionHeader.border": "#333333",
        "list.activeSelectionForeground": "#70e070",
        "list.activeSelectionBackground": "#2a2d2e",
        "input.placeholderForeground": "#808080",
        "titleBar.activeBackground": "#101010",
        "titleBar.border": "#505050",
        "statusBar.background": "#3f3f3f",
        "tab.activeBackground": "#2a2a2a",
        "tab.activeBorder": "#6060ddaa",
        "tab.activeBorderTop": "#6060ddaa",
        "tab.inactiveBackground": "#1a1a1a",
        "editorIndentGuide.activeBackground1": "#6060ddaa",
        "panel.border": "#6060ffaa",
        "panelTitle.activeBorder": "#ff3030dd",
        "statusBar.border": "#6060ffaa",
        "editor.background": "#1f1f1f",
    },
    "semanticHighlighting": true,
    "semanticTokenColors": {
        "variable": "#9CDCFE",
        "variable.readonly": "#4FC1FF",
        "variable.callable": "#DCDCAA",
        "parameter": "#9CDCFE",
        "function": "#DCDCAA",
        "method": "#DCDCAA",
        "type": "#4EC9B0",
        "class": "#4EC9B0",
        "interface": "#4EC9B0",
        "enum": "#4EC9B0",
        "property": "#9CDCFE",
        "property.readonly": "#4FC1FF",
        "keyword": "#C586C0",
        "modifier": "#569CD6",
        "namespace": "#4EC9B0",
        "number": "#B5CEA8",
        "string": "#CE9178",
        "comment": "#6A9955",
        "operator": "#D4D4D4"
    },
    "tokenColors": [
        // --- TextMate 用のバックアップ配色 (セマンティックが効かない言語用) ---
        { "scope": ["comment", "punctuation.definition.comment"], "settings": { "foreground": "#6A9955" } },
        { "scope": ["entity.name.tag", "meta.tag", "punctuation.definition.tag" ], "settings": { "foreground": "#569CD6" } },
        { "scope": ["entity.other.attribute-name", "meta.tag.attributes"], "settings": { "foreground": "#9CDCFE" } },
        { "scope": ["variable", "support.variable", "entity.name.variable", "support.type.property-name.json", "meta.structure.dictionary.key.json", "variable.other.object.property" ], "settings": { "foreground": "#9CDCFE" } },
        { "scope": ["string", "punctuation.definition.string"], "settings": { "foreground": "#CE9178" } },
        { "scope": ["constant.numeric", "constant.language", "support.constant"], "settings": { "foreground": "#B5CEA8" } },
        { "scope": ["keyword", "keyword.control", "storage.type", "storage.modifier"], "settings": { "foreground": "#C586C0" } },
        { "scope": ["entity.name.function", "support.function", "variable.function", "entity.name.method"], "settings": { "foreground": "#DCDCAA" } },
        { "scope": ["entity.name.type", "entity.name.class", "support.class", "support.type"], "settings": { "foreground": "#4EC9B0" } },
        { "scope": ["punctuation", "meta.structure.dictionary.json", "meta.brace"], "settings": { "foreground": "#D4D4D4" } },
        { "scope": ["entity.name.tag", "meta.tag", "punctuation.definition.tag", "entity.other.attribute-name.class.css", "entity.other.attribute-name.id.css", "entity.name.tag.css", "source.css entity.name.tag", "entity.other.attribute-name.parent-selector.css" ], "settings": { "foreground": "#D7BA7D" } },
        { "scope": ["support.type.property-name.css", "meta.property-name.css", "entity.other.attribute-name", "meta.tag.attributes", "support.type.property-name.json", "meta.structure.dictionary.key.json", "variable.other.object.property", "variable.other.property" ], "settings": { "foreground": "#9CDCFE" } },
        { "scope": ["string", "punctuation.definition.string", "support.constant.property-value.css", "meta.property-value.css", "variable.parameter.url.css" ], "settings": { "foreground": "#CE9178" } },
        { "scope": ["constant.numeric", "keyword.other.unit.css", "source.css constant.numeric" ], "settings": { "foreground": "#B5CEA8" } },
        { "scope": ["entity.other.attribute-name.pseudo-class.css", "entity.other.attribute-name.pseudo-element.css" ], "settings": { "foreground": "#DCDCAA" } }
    ]
}
